<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_margin="14dp"
android:background="#FFFFFF">


    <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_banner"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do filme"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/iv_banner"
            android:layout_marginTop="8dp"/>
    <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title" app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tv_vote_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="(450)"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            app:layout_constraintStart_toEndOf="@+id/rating_bar"
            app:layout_constraintBottom_toBottomOf="@+id/rating_bar" android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>