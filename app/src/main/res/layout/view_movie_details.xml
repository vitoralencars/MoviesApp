<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/view_movie_details"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/ebony">

    <android.support.v7.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_down"
            android:id="@+id/imageView2"
            android:background="#151516"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.v7.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/iv_poster_details"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="24dp" android:layout_marginStart="16dp"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="Nome do filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/font_large"
            android:textAlignment="center"
            android:id="@+id/tv_title_details"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/rating_bar_details"
            app:layout_constraintTop_toTopOf="@+id/iv_poster_details"
            app:layout_constraintStart_toEndOf="@+id/iv_poster_details" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="16dp"/>

    <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:theme="@style/CustomRatingTheme"
            android:id="@+id/rating_bar_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize=".1"
            android:rating="3"
            android:secondaryProgressTint="#00000000"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_details"
            app:layout_constraintBottom_toTopOf="@+id/rv_genrers"
            app:layout_constraintStart_toEndOf="@+id/iv_poster_details" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/tv_vote_count_details"/>

    <android.support.v7.widget.AppCompatTextView
            android:text="Descrição do filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_overview"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small"
            app:layout_constraintTop_toBottomOf="@+id/iv_poster_details" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/rv_genrers"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            app:spanCount="2"
            app:layout_constraintTop_toBottomOf="@+id/rating_bar_details"
            app:layout_constraintStart_toEndOf="@+id/iv_poster_details"
            app:layout_constraintBottom_toBottomOf="@+id/iv_poster_details" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"/>

    <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_vote_count_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="(450)"
            android:textSize="@dimen/font_tiny"
            app:layout_constraintStart_toEndOf="@+id/rating_bar_details"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rv_genrers"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_details" android:layout_marginEnd="16dp"/>
    <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_favorite_unchecked"
            android:id="@+id/imageView"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_title_details" android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>