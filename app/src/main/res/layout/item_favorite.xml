<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:cardCornerRadius="3dp"
                                    app:cardElevation="3dp">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content"
                                                 android:padding="14dp"
                                                 android:background="@color/ebony">


        <android.support.v7.widget.AppCompatImageView
                android:layout_width="75dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/iv_poster_favorite"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
        />
        <android.support.v7.widget.AppCompatTextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title_favorite"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/font_large"
                android:textAlignment="center"
                android:maxLines="5"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/iv_poster_favorite"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tv_release_year_favorite" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_release_year_favorite"
                android:textSize="@dimen/font_small"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="ano"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_poster_favorite"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_title_favorite"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toTopOf="@+id/tv_overview_favorite"/>

        <android.support.v7.widget.AppCompatTextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                android:id="@+id/tv_overview_favorite"
                app:layout_constraintStart_toEndOf="@+id/iv_poster_favorite"
                android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_release_year_favorite"
                android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <android.support.v7.widget.AppCompatButton
                style="@style/FillButtonStyle"
                android:id="@+id/btn_show_details"
                android:text="@string/favorites_button_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/barrier2"/>

        <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/barrier2" app:barrierDirection="bottom"
                                            app:constraint_referenced_ids="iv_poster_favorite,tv_release_year_favorite,tv_title_favorite,tv_overview_favorite"
                                            tools:layout_editor_absoluteY="234dp" tools:layout_editor_absoluteX="14dp"/>
        <android.support.v7.widget.AppCompatButton
                style="@style/ClearButtonStyle"
                android:text="@string/favorites_button_remove"
                android:id="@+id/btn_remove_movie"
                app:layout_constraintTop_toTopOf="@+id/barrier2"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_show_details" android:layout_marginEnd="16dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>